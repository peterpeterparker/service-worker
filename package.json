{
	"name": "@dfinity/service-worker",
	"description": "Service worker to check certification when loading assets from the Internet Computer.",
	"version": "1.5.0",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rm -fr dist dist-dev dist-prod coverage",
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"create-ssl-certs": "mkdir -p certs && mkcert -cert-file certs/cert.pem -key-file certs/key.pem ic0.local \"*.ic0.local\" ic.local \"*.ic.local\" localhost 127.0.0.1 ::1",
		"lint": "npx eslint src",
		"lint:fix": "npx eslint --fix src",
		"test:coverage": "jest --verbose --collectCoverage",
		"test": "jest",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"files": [
		"dist-dev",
		"dist-prod",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dfinity/ic.git",
		"directory": "typescript/service-worker"
	},
	"dependencies": {
		"@dfinity/agent": "~0.15.1",
		"@dfinity/candid": "~0.15.1",
		"@dfinity/principal": "~0.15.1",
		"base64-arraybuffer": "^1.0.2",
		"idb": "^7.1.1",
		"pako": "^2.1.0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/pako": "^1.0.3",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"fake-indexeddb": "^4.0.1",
		"jest-cli": "^27.5.1",
		"jest-environment-node": "^27.5.1",
		"jest-fetch-mock": "^3.0.3",
		"jest-junit": "^13.0.0",
		"prettier": "^2.8.2",
		"prettier-plugin-organize-imports": "^3.2.1",
		"process": "^0.11.10",
		"stream-browserify": "^3.0.0",
		"text-encoding": "^0.7.0",
		"ts-jest": "^27.1.3",
		"ts-loader": "^9.2.8",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-pwa": "^0.14.1"
	},
	"keywords": [
		"internet computer",
		"internet-computer",
		"ic",
		"dfinity",
		"dfx",
		"canister",
		"candid",
		"motoko",
		"javascript",
		"typescript",
		"blockchain",
		"crypto",
		"dapp",
		"service worker",
		"service-worker"
	]
}
